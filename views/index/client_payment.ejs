<div class="container">
    <div class="row">
        <div class="col s12 m12">
            <div class="card blue-grey darken-1">
                <div class="card-content claent_payment white-text">
                    <h5 class="header section-title">

				<span><i class="mdi-action-account-balance">
                    </i>
					Client payment
				</span>
                    </h5>
                </div>
                <div class="card-action ">
                    <div class="row date white-text">
                        <div class="col m1 s6 center">
                            <p>Date from: </p>
                        </div>
                        <div class="col m2 s6">
                            <label for="icon_prefix" class="right-align"><i class="small mdi-action-event"></i></label>
                            <input id="icon_prefix" type="date" class="datepicker">
                        </div>
                        <div class="col m1 s6 center">
                            <p>to:</p>
                        </div>
                        <div class="col m2 s6">
                            <label for="icon_prefix"><i class="small mdi-action-event"></i></label>
                            <input type="date" class="datepicker">
                        </div>
                    </div>

                    <div class="row table_history ">
                        <table>
                            <thead>
                            <tr>
                                <th data-field="id">Login</th>
                                <th data-field="name">Payment date</th>
                                <th data-field="price">Transaction ID</th>
                                <th data-field="price">Service ID</th>
                                <th data-field="price">Payment scheme</th>
                                <th data-field="price">Sum</th>
                            </tr>
                            </thead>

                            <tbody id="payments-list">
                            <tr class="template hidden">
                                <td class="login"></td>
                                <td class="date"></td>
                                <td class="transactionid"></td>
                                <td class="serviceid"></td>
                                <td class="scheme"></td>
                                <td class="sum"></td>
                            </tr>
                            </tbody>
                        </table>
                        <div class="sum">
                            <a class="btn disabled right teal lighten-2 white-text" onclick="updatePayment()">Update</a>
                        </div>
                    </div>
                </div>

                </div>
            </div>
        </div>
    </div>
