<div class="container">
    <div class="row">
        <div class="col s12 m12">
            <div class="card card_methods teal lighten-1">
                <div class="card-content client_payment white-text">
                    <h5 class="header section-title">
                        <span><i class="mdi-action-account-balance"> </i>
                                Payment History
                        </span>
                    </h5>
                </div>
                <div class="card-action card-action-line">
                    <!--DATE PICKER -->
                    <div class="row date white-text">
                        <div class="col m1 s6 center">
                            <p>Date from: </p>
                        </div>
                        <div class="col m2 s6">
                            <label for="icon_prefix" class="right-align"><i class="small mdi-action-event"></i></label>
                            <input id="icon_prefix" type="date" class="datepicker">
                        </div>
                        <div class="col m1 s6 center">
                            <p>to:</p>
                        </div>
                        <div class="col m2 s6">
                            <label for="icon_prefix2"><i class="small mdi-action-event"></i></label>
                            <input id="icon_prefix2" type="date" class="datepicker">
                        </div>
                        <div class="sum">
                            <a class="btn teal lighten-4" onclick="updatePayment()">OK</a>
                        </div>
                    </div>

                    <div class="row table_history ">
                        <table>
                            <thead>
                            <tr>
                                <th data-field="name">Payment date</th>
                                <th data-field="price">Transaction ID</th>
                                <th data-field="price">Service</th>
                                <th data-field="price">Payment system</th>
                                <th data-field="price">Sum</th>
                            </tr>
                            </thead>

                            <tbody id="payments-list">
                                <tr class="template hidden">
                                    <td class="date"></td>
                                    <td class="transactionid"></td>
                                    <td class="serviceid"></td>
                                    <td class="paysystem"></td>
                                    <td class="sum"></td>
                                </tr>
                                <tr class="empty hidden">
                                    <td colspan="5">History by this period is empty</td>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                </div>

                </div>
            </div>
        </div>
    </div>
