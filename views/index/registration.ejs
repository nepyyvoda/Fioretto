<!DOCTYPE html>
  <html>
     <head>
        <meta charset="utf-8" />
        
        <!-- mobile settings -->
        <meta name="viewport" content="width=device-width, maximum-scale=1, initial-scale=1, user-scalable=0" />

        <!-- Favicon -->
        <link rel="shortcut icon" href="/images/favicon.ico" />
		
		<!-- Materializecss -->
		<link type="text/css" rel="stylesheet" href="/styles/materialize.min.css"  media="screen,projection"/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
		<link href="/styles/style_start.css" type="text/css" rel="stylesheet" media="screen,projection"/>
		

    </head>
	
	<body>

		<div class="row registration">
			<div class="col m12">


				<form id="register" method="POST" action="/api/registration">
					<div class="row">
							<a href="/login"  class="waves-effect waves-light btn right login_button"><i class="mdi-action-exit-to-app left"></i>Log in</a>
						<div class="registration-forma white z-depth-3 col s12 m4 offset-m4 center">

							<h5 class="center-align">Registration</h5>
							<div class="input-field col s12">
								<i class="mdi-action-account-circle prefix"></i>
								<input id="icon_prefix" required name="login" type="text" class="validate">
								<label for="icon_prefix">Login</label>
							</div>

							<div class="input-field col s12">
								<i class="mdi-communication-email prefix"></i>
								<input id="email" name="email" required type="email" class="validate">
								<label for="email">Email</label>
							</div>

							<div class="input-field col s12">
								<i class="mdi-action-lock-open prefix"></i>
								<input id="password" name="password" required type="password" class="validate">
								<label for="password">Password</label>
							</div>

							<div class="input-field col s12">
								<i class="mdi-action-lock-outline prefix"></i>
								<input id="password-confirm" required type="password" class="validate">
								<label for="password-confirm">Repeat password</label>
							</div>
							<a href="/password_recovery" class="right-align"><h6>Forgot your password?</h6></a>
							<div class="row center button_in">
								<!--<a class="waves-effect waves-light btn-large"><i class="mdi-action-done left"></i>Save</a>-->
								<button class="btn-large waves-effect waves-light" type="submit" name="action">Register
									<i class="mdi-content-send right"></i>
								</button>
							</div>
						</div>
					</div>

				</form>
			</div>
		</div>
		
		
	
		 <!--  Scripts-->
		 <!-- Materializecss -->
		 <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
		 <script type="text/javascript" src="/scripts/libs/jquery.cookie.js"></script>
		 <script type="text/javascript" src="/scripts/libs/materialize.min.js"></script>
		 <script type="text/javascript" src="/scripts/libs/jquery.cookie.js"></script>
		 <script type="text/javascript" src="/scripts/init.js"></script>
		 <script type="text/javascript" src="http://crypto-js.googlecode.com/svn/tags/3.1.2/build/rollups/sha256.js"></script>
		 <script type="text/javascript" src="/scripts/app.js"></script>
	</body>
</html>
 
  