<div class="container">
	 <div class="row">
		<div class="col s12 m12">
			<div class="card card_methods teal lighten-1 valign center z-depth-2">
				<div class="card-content client_payment white-text">
					<h5 class="header section-title">
						<span><i class="small material-icons">payment</i>
							Refill Balance
						</span>
					</h5>
					</div>
					<div class="card-action card-action-line">
						 <h1 class="card-title">Refill your balance</h1>
						<div class="row">
							<div class="amount_currency">
								<!--<a class="col s4 m1 offset-m3 btn-large btn_count disabled">200</a>-->
								<div class="col s11 m6 l4 offset-s1 offset-m3 offset-l4">
									<div class="">
										<form class="col s6 m6 offset-m0 offset-s0 offset-l2">
											<input required placeholder="sum" type="number" min="0" class="white amount">
										</form>
										<select class="white col s5 m6 l4 browser-default currency">
											<option value="1" selected>USD</option>
											<!--<option value="2">EUR</option>-->
										</select>
									</div>
								</div>
							</div>
						</div>
					</div>

					<div class="center-btn pay_methods">
						<form method="post" action="https://www.sandbox.paypal.com/cgi-bin/webscr" class="paypal-button" target="_top">
							<div class="hide" id="errorBox"></div>
							<input type="hidden" name="button" value="buynow">
							<input type="hidden" name="item_name" value="Addition'">
							<input type="hidden" name="quantity" value="1">
							<input type="hidden" name="amount" value="">
							<input type="hidden" name="custom" value= '{"user": "test"}'>
							<input type="hidden" name="currency_code" value="RUB">
							<input type="hidden" name="env" value="www.sandbox">
							<input type="hidden" name="cmd" value="_xclick">
							<input type="hidden" name="business" value="E9H953PCMYUWE">
							<input type="hidden" name="bn" value="JavaScriptButton_buynow">
						</form>
						<a class="teal accent-4 paypal btn-large" href="#refill_paypal"></a>
						<a class="teal accent-4 webmoney btn-large modal-trigger" href="#refill-soon"></a>
						<a class="teal accent-4 mastercard btn-large"></a>
					</div>
			    </div>
			</div>
		</div>
	 </div>
<div id="refill-soon" class="modal small">
	<div class="modal-content">
		<a href="#!" class="right modal-close close_btn"> <i class="small  mdi-content-clear"></i></a>
		<h4>Refill balance</h4>
		<p>Refill method will be available soon</p>
	</div>
	<div class="modal-footer">
		<!--<a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Ok</a>-->
	</div>
</div>

<div id="refill_paypal" class="modal small">
    <div class="modal-content">
        <a href="#!" class="right modal-close close_btn"> <i class="small  mdi-content-clear"></i></a>
        <h4>Please wait</h4>
        <p>Redirecting to PayPal...</p>
        <div class="progress">
            <div class="indeterminate"></div>
        </div>
    </div>
    <div class="modal-footer">
        <!--<a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Ok</a>-->
    </div>
</div>