    <link href="/styles/style_start.css" type="text/css" rel="stylesheet" media="screen,projection"/>


</head>

<section>
    <div class="row center  page_error grey-text">
        <h2 class="white-text">Internal error!</h2>
        <% if(mode !== 'debug') { %>
            <p>Something went wrong... Try later</p>
        <% } else { %>
            <p><%= message %></p>
        <% } %>
        <a href="/index" class="waves-effect waves-light btn-large">Back Home</a>
    </div>

</section>

